{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": ["plugin:react/recommended", "standard", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],

  "rules": {
    "react/prop-types": ["off"],
    "react/boolean-prop-naming": ["error", { "propTypeNames": ["bool", "mutuallyExclusiveTrueProps"] }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
